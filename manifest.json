{
  "manifest_version": 3,
  "name": "Enhanced Confluence Search Results",
  "version": "1.0.3",
  "description": "Enhances search functionality on Confluence pages.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "optional_host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background/background.js"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/extension-icon.png",
    "48": "icons/extension-icon.png",
    "128": "icons/extension-icon.png"
  }
}
